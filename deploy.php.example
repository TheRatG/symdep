<?php
set('repository', '<your_repository>.git');

localServer('local')
    ->user('vagrant')
    ->stage('local')
    ->env('deploy_path', __DIR__);

server('prod', '<prod_host>', 22)
    ->user('<prod_user>')
    ->identityFile()
    ->stage('prod')
    ->env('deploy_path', '<project_path>');

/**
 * modify properties
 */
task('env', function () {
    set('auto_migrate', false);
});

after('properties', 'env');
